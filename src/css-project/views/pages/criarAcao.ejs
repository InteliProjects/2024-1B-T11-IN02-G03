<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro de Ação Social</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white px-8 py-6 rounded-lg m-4 shadow-md w-full max-w-4xl">
      <h1 class="text-3xl font-bold text-center mb-6">
        Cadastro de Nova Ação Social
      </h1>
      <form id="cadastroForm">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Adiciona Imagem da Ação Social -->

          <!-- Adiciona Imagem da Ação Social -->
          <div class="form-group mb-4 md:col-span-2">
            <label for="acaoFoto" class="block mb-2 font-medium"
              >Adicione uma foto da Ação Social</label
            >
            <div
              class="flex items-center justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md"
            >
              <div class="space-y-1 text-center">
                <img
                  id="previewImage"
                  class="mx-auto h-48 w-48"
                  alt="Imagem pré-carregada"
                  src="url-da-imagem-pre-carregada"
                />
                <svg
                  class="mx-auto h-12 w-12 text-gray-400"
                  stroke="currentColor"
                  fill="none"
                  viewBox="0 0 48 48"
                  aria-hidden="true"
                >
                  <path
                    d="M28 8H12a4 4 0 00-4 4v24a4 4 0 004 4h16"
                    stroke="#4a5568"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M20 20l5.586-5.586a2 2 0 012.828 0L34 20M14 34h20a2 2 0 002-2v-7a2 2 0 00-2-2H14a2 2 0 00-2 2v7a2 2 0 002 2z"
                    stroke="#4a5568"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
                <div class="flex text-sm text-gray-600">
                  <label
                    for="acaoFoto"
                    class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500"
                  >
                    <span>Upload a file</span>
                    <input
                      id="acaoFoto"
                      name="acaoFoto"
                      type="file"
                      class="sr-only"
                      accept="image/*"
                    />
                  </label>
                  <p class="pl-1">or drag and drop</p>
                </div>
                <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
              </div>
            </div>
          </div>

          <!-- Campos existentes -->
          <div class="form-group mb-4">
            <label for="nome" class="block mb-2 font-medium"
              >Nome da Ação:</label
            >
            <input
              type="text"
              id="nome"
              name="nome"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4">
            <label for="inicio" class="block mb-2 font-medium"
              >Data de Início:</label
            >
            <input
              type="date"
              id="inicio"
              name="inicio"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4">
            <label for="termino" class="block mb-2 font-medium"
              >Data de Término:</label
            >
            <input
              type="date"
              id="termino"
              name="termino"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4">
            <label for="vagas" class="block mb-2 font-medium"
              >Quantidade de Vagas:</label
            >
            <input
              type="number"
              id="vagas"
              name="vagas"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4 md:col-span-2">
            <label for="descricao" class="block mb-2 font-medium"
              >Descrição:</label
            >
            <textarea
              id="descricao"
              name="descricao"
              rows="5"
              maxlength="200"
              required
              placeholder="Max. 200 caracteres"
              class="w-full px-3 py-2 border rounded-lg"
            ></textarea>
          </div>

          <!-- Novos campos adicionados -->
          <div class="form-group mb-4">
            <label for="cep" class="block mb-2 font-medium">CEP:</label>
            <input
              type="text"
              id="cep"
              name="cep"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4">
            <label for="estado" class="block mb-2 font-medium">Estado:</label>
            <input
              type="text"
              id="estado"
              name="estado"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4">
            <label for="cidade" class="block mb-2 font-medium">Cidade:</label>
            <input
              type="text"
              id="cidade"
              name="cidade"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4">
            <label for="bairro" class="block mb-2 font-medium">Bairro:</label>
            <input
              type="text"
              id="bairro"
              name="bairro"
              required
              class="w-full px-3 py-2 border rounded-lg"
            />
          </div>

          <div class="form-group mb-4 md:col-span-2">
            <label for="ong" class="block mb-2 font-medium"
              >Esta ação social faz parte de uma ONG?</label
            >
            <input
              type="checkbox"
              id="ong"
              name="ong"
              class="align-middle h-7 w-7"
            />
          </div>

          <div id="ongFields" class="hidden md:col-span-2">
            <div class="form-group mb-4">
              <label for="nomeOng" class="block mb-2 font-medium"
                >Nome da ONG:</label
              >
              <input
                type="text"
                id="nomeOng"
                name="nomeOng"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>

            <div class="form-group mb-4">
              <label for="cnpjOng" class="block mb-2 font-medium"
                >CNPJ da ONG:</label
              >
              <input
                type="text"
                id="cnpjOng"
                name="cnpjOng"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>

            <div class="form-group mb-4">
              <label for="emailOng" class="block mb-2 font-medium"
                >Email da ONG:</label
              >
              <input
                type="email"
                id="emailOng"
                name="emailOng"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
          </div>

          <div class="form-group my-4 flex justify-between md:col-span-2">
            <button
              type="submit"
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-4 px-4 rounded-lg mr-2 w-full"
            >
              Cadastrar Ação
            </button>
            <button
              type="button"
              onclick="window.location.href = '/social'"
              class="bg-red-500 hover:bg-red-700 text-white font-bold py-4 px-4 rounded-lg w-full"
            >
              Cancelar
            </button>
          </div>
        </div>
      </form>
    </div>

    <script type="module">
      import { v4 as uuidv4 } from "https://jspm.dev/uuid";

      let user = "";

      // Função para obter o ID do usuário antes de enviar o formulário
      async function fetchUser() {
        try {
          const response = await fetch("/checkUser", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });
          const data = await response.json();
          return data.uid;
        } catch (error) {
          console.error("Erro ao obter informações do usuário:", error);
          return null;
        }
      }

      document
        .getElementById("cadastroForm")
        .addEventListener("submit", async function (event) {
          event.preventDefault(); // Evita o envio padrão do formulário

          if (!user) {
            user = await fetchUser();
          }

          if (!user) {
            alert("Erro ao obter informações do usuário.");
            return;
          }

          const fileInput = document.getElementById("acaoFoto");
          const file = fileInput.files[0];

          if (!file) {
            alert("Por favor, selecione uma imagem.");
            return;
          }

          const formData = new FormData();
          formData.append("key", "4f7faf3f4c1b5ea518d9bcf6230e7c60"); // Substitua pela sua chave de API
          formData.append("image", file);
          formData.append("name", file.name); // Nome do arquivo

          try {
            // Upload da imagem para ImgBB
            const response = await fetch("https://api.imgbb.com/1/upload", {
              method: "POST",
              body: formData,
            });
            const data = await response.json();
            const imageUrl = data.data.url;

            let isOng = document.getElementById("ong").checked;

            // Dados do formulário
            const formDataAcao = {
              id: uuidv4(),
              nome: document.getElementById("nome").value,
              dataInicio: document.getElementById("inicio").value,
              dataFim: document.getElementById("termino").value,
              numeroVagas: parseInt(document.getElementById("vagas").value, 10),
              descricao: document.getElementById("descricao").value,
              estado: document.getElementById("estado").value,
              cidade: document.getElementById("cidade").value,
              cep: document.getElementById("cep").value,
              bairro: document.getElementById("bairro").value,
              isOng: isOng,
              nomeOng: isOng ? document.getElementById("nomeOng").value : "",
              emailOng: isOng ? document.getElementById("emailOng").value : "",
              cnpj: isOng ? document.getElementById("cnpjOng").value : "",
              pais: "Brasil",
              idCriador: user,
              linkImg: imageUrl,
            };

            // Salvar ação no banco de dados
            const responseAcao = await fetch("/criarAcao/create", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formDataAcao),
            });

            const dataAcao = await responseAcao.json();
            console.log("Ação social cadastrada com sucesso:", dataAcao);
            alert("Ação social cadastrada com sucesso!");
            window.location.href = "/social"; // Redireciona após sucesso
          } catch (error) {
            console.error("Erro ao cadastrar ação social:", error);
            alert("Erro ao cadastrar ação social.");
          }
        });

      // Pré-visualização da imagem selecionada
      const fileInput = document.getElementById("acaoFoto");
      const previewImage = document.getElementById("previewImage");

      fileInput.addEventListener("change", function (event) {
        const file = event.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            previewImage.src = e.target.result;
          };
          reader.readAsDataURL(file);
        }
      });

      // Campo para adição de campos caso a ação seja de alguma ONG
      document.getElementById("ong").addEventListener("change", function () {
        const ongFields = document.getElementById("ongFields");
        if (this.checked) {
          ongFields.classList.remove("hidden");
        } else {
          ongFields.classList.add("hidden");
        }
      });

      // Obter o ID do usuário ao carregar a página
      fetchUser().then((uid) => {
        user = uid;
      });
    </script>
  </body>
</html>
